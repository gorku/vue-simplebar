{
    "name": "vue-simplebar",
    "version": "0.1.2",
    "description": "Vue.js wrapper for simplebar",
    "paths": {
        "source": "src",
        "destination": "dist",
        "example": "examples"
    },
    "main": "dist/vue-simplebar.cjs.js",
    "module": "dist/vue-simplebar.esm.js",
    "browser": "dist/vue-simplebar.umd.js",
    "style": "dist/vue-simplebar.css",
    "scripts": {
        "build": "rollup -c --environment production",
        "prepublish": "npm run build && npm run build:css",
        "build:css": "postcss src/style.css -o dist/vue-simplebar.min.css --env production && postcss src/style.css -o dist/vue-simplebar.css",
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run development -- --watch",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js"
    },
    "keywords": [
        "simplebar",
        "vue",
        "scroll"
    ],
    "author": {
        "name": "Helder Lucas <helder@winio.io>"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hfalucas/vue-simplebar"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@vue/test-utils": "^1.0.0-beta.25",
        "babel-loader": "^8.0.2",
        "css-loader": "^1.0.0",
        "cssnano": "^4.1.3",
        "node-sass": "^4.9.3",
        "postcss-cli": "^6.1.2",
        "postcss-import": "^12.0.1",
        "rollup": "^0.65.2",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-commonjs": "^9.1.6",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-uglify": "^5.0.2",
        "sass-loader": "^7.1.0",
        "sass": "^1.15.2",
        "style-loader": "^0.23.0",
        "ts-loader": "^5.1.0",
        "typescript": "^3.0.3",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.1",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.17.2",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.7",
        "laravel-mix": "^4.0.7",
        "cross-env": "^5.1"
    },
    "dependencies": {
        "simplebar": "^3.1.5"
    }
}
