{
    "name": "simplebar-vue",
    "version": "0.1.0",
    "description": "Vue.js wrapper for simplebar",
    "paths": {
        "source": "src",
        "destination": "dist",
        "example": "examples"
    },
    "main": "dist/simplebar-vue.cjs.js",
    "module": "dist/simplebar-vue.esm.js",
    "browser": "dist/simplebar-vue.umd.js",
    "style": "dist/simplebar-vue.css",
    "scripts": {
        "build": "rollup -c --environment production",
        "prepublish": "npm run build && npm run build:css",
        "build:css": "postcss src/style.css -o dist/simplebar-vue.min.css --env production && postcss src/style.css -o dist/simplebar-vue.css",
        "dev": "webpack-dev-server --config webpack.config.js"
    },
    "keywords": [
        "simplebar",
        "vue",
        "scroll"
    ],
    "author": {
        "name": "Helder Lucas <helder@winio.io>"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hfalucas/simplebar-vue"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@vue/test-utils": "^1.0.0-beta.25",
        "babel-loader": "^8.0.2",
        "css-loader": "^1.0.0",
        "cssnano": "^4.1.3",
        "node-sass": "^4.9.3",
        "postcss-cli": "^6.1.2",
        "postcss-import": "^12.0.1",
        "rollup": "^0.65.2",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-commonjs": "^9.1.6",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-uglify": "^5.0.2",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.0",
        "ts-loader": "^5.1.0",
        "typescript": "^3.0.3",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.1",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.17.2",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.7"
    },
    "dependencies": {
        "simplebar": "^3.1.5"
    }
}
